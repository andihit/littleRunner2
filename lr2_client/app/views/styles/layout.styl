#container
  position: absolute
  width: 1024px
  height: 710px
  margin-left: -(@width / 2)
  margin-top: -(@height / 2)
  
  top: 50%
  left: 50%

  #contentContainer
    position: relative
    min-height: 512px


h1
  margin-bottom: 30px
  font-size: 48px
  font-weight: normal
  text-align: center
  letter-spacing: 2px


#footer
  margin-top: 30px
  padding: 5px
  
  border-radius: 5px
  background-color: rgba(255, 255, 255, .04)
  
  text-align: center
  font-size: 18px
  
  > span, > a
    padding: 0 10px
