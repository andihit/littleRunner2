@import 'nib'

#game
  position: absolute
  top: 50%
  left: 50%
  
  width: 1024px
  height: 512px
  
  margin-left: -(@width / 2)
  margin-top: -(@height / 2)
  
  background-color: #fff
  border-radius: 7px

  > div
    position: absolute
    
  #canvasContainer
    width: 100%
    height: 100%
    border-radius: 7px
