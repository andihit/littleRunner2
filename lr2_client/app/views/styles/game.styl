@import 'nib'

#game
  position: absolute
  top: 50%
  left: 50%
  
  width: 1024px
  height: 512px
  
  margin-left: -(@width / 2)
  margin-top: -(@height / 2)
  
  background-color: #fff

  > div
    position: absolute
    
  #gameContainer
    width: 100%
    height: 100%

  #gameOver
    display: none
    top: 50%
    width: 100%
    height: 230px
    margin-top: -(@height / 2)
      
    font-family: Salsa, cursive
    color: #3A3838
    text-align: center
    
    h2
      font-size: 72px
      
    p
      font-size: 40px
      margin-top: -8px
      margin-bottom: 24px
      
    a
      font-size: 48px
      color: #434141
    
      &:hover
        text-decoration: underline