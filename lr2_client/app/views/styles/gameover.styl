@import 'nib'

#game
  #gameOver
    display: none
    top: 50%
    width: 100%
    height: 230px
    margin-top: -(@height / 2)
    
    color: #3A3838
    text-align: center
    
    h2
      font-size: 72px
      
    p
      font-size: 40px
      margin-top: -8px
      margin-bottom: 24px
      
    a
      font-size: 48px
      color: #434141
    
      &:hover
        text-decoration: underline
